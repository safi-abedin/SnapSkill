@using SnapSkill.Web.Areas.Admin.Models;
@model IEnumerable<Course>
@{
    ViewData["Title"] = "Courses";
}

@section Styles{
    <style>
        .card-img-container {
            position: relative;
            width: 100%;
            height: 0;
            padding-top: 80%; /* Adjust the padding-top to control the aspect ratio */
            overflow: hidden;
        }

        .card-img {
            object-fit:cover;
            width: 100%;
            height: 100%;
            position: absolute;
            top: 0;
            left: 0;
        }
    </style>

}

@foreach(var item in Model)
{
    <div class="row">
        <div class="col-md-12">
            <div class="container mb-5">
                <div class="card shadow">
                    <div class="row">
                        <div class="col-md-5">
                            <div class="card-img-container d-flex align-items-center" style="height: 100%;">
                                <!-- Adjust the height as needed -->
                                <img src="~/Pictures/@item.ImageURL" class="card-img img-fluid" alt="Event Image">
                            </div>
                        </div>
                        <div class="col-md-7">
                            <div class="card-body">
                                <h5 class="card-title">@item.Name</h5>
                                <h6 class="card-subtitle mb-2 text-muted badge bg-warning">@item.level</h6>
                                <p class="card-text">@item.Description</p>
                                <strong><p class="card-text">Tk. @item.Price</p></strong>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <ul class="list-group list-group-flush">
                                        <li class="list-group-item">
                                            <strong>Registration</strong>
                                            <p class="badge bg-warning">Complete Registration Before @item.DateOnly</p>
                                        </li>
                                    </ul>
                                </div>
                                <div class="col-md-6">
                                    <ul class="list-group list-group-flush">
                                        <li class="list-group-item">
                                            <strong>Schedule</strong>
                                            <p>@item.DayOfWeek @item.startTime - @item.endTime</p>
                                            <p>Starts from @item.startDate.ToString("MMM dd, yyyy")</p>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                            <div class="card-body d-flex justify-content-between align-items-center">
                                <div>
                                    <div>
                                        <a href="#" class="btn btn-dark">Register</a>
                                        <a href="#" class="card-link btn btn-outline-info">See Details</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


}

